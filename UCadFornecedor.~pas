uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, uCadPadrao, ZSqlUpdate, DB, ZAbstractRODataset,
  ZAbstractDataset, ZDataset, ActnList, ImgList, Grids, DBGrids, ComCtrls,
  StdCtrls, ToolWin, jpeg, ExtCtrls, DBCtrls, Mask;

type
  TfCadFornecedor = class(TfCadPadrao)
    TID: TIntegerField;
    TNOME: TStringField;
    TENDERECO: TStringField;
    TBAIRRO: TStringField;
    TCIDADE: TStringField;
    TCEP: TStringField;
    TUF: TStringField;
    TTEL1: TStringField;
    TTEL2: TStringField;
    TFAX: TStringField;
    TCONTATO: TStringField;
    TEMAIL: TStringField;
    TIE: TStringField;
    TCNPJ: TStringField;
    TCONTA: TStringField;
    TAGENCIA: TStringField;
    TBANCO: TStringField;
    TTIPOPAGTO: TIntegerField;
    TOBS: TStringField;
    TEX: TIntegerField;
    TDESPESA: TStringField;
    TSITE: TStringField;
    TTIPOPESSOA: TStringField;
    Label2: TLabel;
    DBEdit1: TDBEdit;
    Label3: TLabel;
    DBEdit2: TDBEdit;
    Label4: TLabel;
    DBEdit3: TDBEdit;
    Label5: TLabel;
    DBEdit4: TDBEdit;
    Label6: TLabel;
    DBEdit5: TDBEdit;
    Label7: TLabel;
    DBEdit6: TDBEdit;
    Label8: TLabel;
    DBEdit7: TDBEdit;
    Label9: TLabel;
    DBEdit8: TDBEdit;
    DBEdit9: TDBEdit;
    DBEdit10: TDBEdit;
    Label12: TLabel;
    DBEdit11: TDBEdit;
    Label13: TLabel;
    DBEdit12: TDBEdit;
    Label14: TLabel;
    DBEdit13: TDBEdit;
    Label15: TLabel;
    DBEdit14: TDBEdit;
    DBCheckBox1: TDBCheckBox;
    rgTipo: TDBRadioGroup;
    Label16: TLabel;
    DBEdit15: TDBEdit;
    Label17: TLabel;
    Label18: TLabel;
    DBEdit17: TDBEdit;
    Label19: TLabel;
    DBEdit18: TDBEdit;
    Label20: TLabel;
    DBEdit19: TDBEdit;
    Label21: TLabel;
    DBEdit20: TDBEdit;
    DBMemo1: TDBMemo;
